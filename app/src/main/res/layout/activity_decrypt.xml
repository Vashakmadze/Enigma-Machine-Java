<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_decrypt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA3AF"
    tools:context=".DecryptActivity">

    <LinearLayout
        android:id="@+id/linear_decrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_decrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Decrypt"
            android:textColor="#007CBE"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_keyboard_decrypt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20sp"
            android:paddingBottom="20sp">

            <LinearLayout
                android:id="@+id/linear_keyboard_horizontal_first_decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/key_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="q"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="w"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="e"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="r"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="t"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="y"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_u"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="u"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="i"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_o"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="o"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="p"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_keyboard_horizontal_second_decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/key_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="a"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="s"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="d"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="f"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="g"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="h"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_j"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="j"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="k"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="l"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_keyboard_horizontal_third_decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/key_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="z"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="x"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="c"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="v"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="b"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="n"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

                <Button
                    android:id="@+id/key_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:onClick="keyPress"
                    android:text="m"
                    android:textSize="10sp"
                    app:backgroundTint="#FFD639" />

            </LinearLayout>

            <TextView
                android:id="@+id/output_third_rotor_decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="20sp"
                android:text="Output after third Rotor: "
                android:textColor="#00AF54"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/output_second_rotor_decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="20sp"
                android:text="Output after second Rotor: "
                android:textColor="#00AF54"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/output_first_rotor_decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="20sp"
                android:text="Output after first Rotor: "
                android:textColor="#00AF54"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/output_plugboard_decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="20sp"
                android:text="Final Output: "
                android:textColor="#00AF54"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/goBack_decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:layout_marginVertical="10sp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="goBack"
        android:text="goBack"
        android:textColor="#007CBE"
        android:textStyle="bold"
        app:backgroundTint="#FFD639"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>